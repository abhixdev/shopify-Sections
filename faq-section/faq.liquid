{{ 'section-faq.css' | asset_url | stylesheet_tag }}

<div class="faq">
  <h1>{{ section.settings.headline }}</h1>

  {% for block in section.blocks %}
    <div class="collapse collapse-arrow bg-base-200">
      <input type="radio" name="my-accordion-2">
      <div class="collapse-title text-xl font-medium">{{ block.settings.question }}</div>
      <div class="collapse-content">
        <p>{{ block.settings.answer }}</p>
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "label": "Headline",
      "id": "headline"
    }
  ],
  "blocks": [
    {
      "name": "Question",
      "type": "question",
      "settings": [
        {
          "type": "text",
          "label": "question",
          "id": "question"
        },
        {
          "type": "text",
          "label": "answer",
          "id": "answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ"
    }
  ]
}
{% endschema %}
